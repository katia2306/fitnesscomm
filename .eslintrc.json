{
  "root": true,
  "extends": [
    "react-app",
    "airbnb",
    "plugin:react/recommended",
    "prettier",
    "prettier/react"
  ],
  "plugins": [
    "prettier",
    "react",
    "react-hooks",
    "no-null"
  ],
  "parserOptions": {
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "env": {
    "es6": true,
    "node": true,
    "browser": true
  },
  "settings": {
    "import/resolver": {
      "node": {
        "extensions": [".js", ".jsx"]
      }
    }
  },
  "rules": {
    "prettier/prettier": [
      "error",
      {
        "tabWidth": 2,
        "endOfLine": "lf",
        "singleQuote": false,
        "jsxSingleQuote": false
      }
    ],

    "import/prefer-default-export": "off",

    "jsx-a11y/anchor-is-valid": [
      "error",
      {
        "components": ["Link"],
        "specialLink": ["to", "component"]
      }
    ],

    "react/jsx-filename-extension": ["error", { "extensions": [".jsx"] }],

    "react-hooks/rules-of-hooks": "error",
    "react-hooks/exhaustive-deps": "warn",

    "no-restricted-imports": [
      "error",
      {
        "patterns": []
      }
    ],

    "no-null/no-null": "error"
  }
}
